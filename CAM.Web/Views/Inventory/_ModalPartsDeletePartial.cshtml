<div class="modal" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">

            @* header *@
            <div class="modal-header">
                <h4 class="modal-title">Confirm deletion</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>

            @* body *@
            <div class="modal-body text-center">
                <h6 class="mb-4">Are you sure you want to delete this part?</h6>
                <span class="mr-2" style="display: inline-block">
                    @* form, hidden select w/ option set by jquery dynamically *@
                    <form method="post" asp-controller="parts" asp-action="delete">
                        <select type="text" name="id" style="visibility: hidden">
                            <option type="text" selected="true" value="" id="deleteOptionHidden"></option>
                        </select>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </span>
                <span class="mr-4">
                    <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </span>
            </div>
        </div>
    </div>
</div>