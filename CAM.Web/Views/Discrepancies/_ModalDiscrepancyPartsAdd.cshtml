@model CAM.Web.ViewModels.Discrepancies.DiscrepanciesAddPartViewModel
<div class="modal fade" id="addDiscrepPartModal">
    <div class="centered-form-container modal-dialog" style="min-width:700px;">
        <div class="form-panel shadowed modal-content">
            @* header *@
            <div class="modal-header">
                <h4 class="modal-title">Discrepancy - Add parts</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            @* body *@
            <div class="modal-body">
                <span class="mr-2" style="display: inline-block">
                    @* form *@
                    <form data-ajax="true" data-ajax-url=@Url.Action("onaddpart", "Discrepancies") data-ajax-method="post"
                    data-ajax-update="#parts-basket" data-ajax-failure="onAddPartFailure">
                        <div class="row">
                            <span asp-validation-for="InputPartNumber" class="text-danger col-md-6"></span>
                            <span asp-validation-for="InputQuantity" class="text-danger col-md-3"></span>
                        </div> 
                        <div class="form-row justify-content-center pt-3">
                            @Html.HiddenFor(m => m.DiscrepancyId)
                            @Html.HiddenFor(m => m.PartId, new { id = "searchPartsId"})
                            <div class="form-group autocomplete col-md-6">
                                <span class="fa fa-search form-search-input"></span>
                                <input asp-for="InputPartNumber" id="searchParts" type="text" class="form-control has-search-icon" placeholder="Search for a part..." autocomplete="off" />
                            </div>
                            <div class="form-group col-md-2">
                                <input asp-for="InputQuantity" id="partQty" class="form-control" min="1" value="1" placeholder="Qty" />
                            </div>
                            <div class="btn-toolbar pl-2 mb-5" style="display: block;">
                                <button type="submit" class="btn btn-secondary"><i class="far fa-plus-square"></i> Add to list</button>
                                <button class="btn btn-dark" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </form>
                </span>
            </div>
        </div>
    </div>
</div>