@{
    ViewData["Title"] = "Maintenance - Discrepancies";
}
<div class="panel-body">
    <div class="subnav-container">
        <ul class="list-inline subnav-link">
            <li>
                <a href="/maintenance/workorders/">Work Orders</a>
            </li>
            <li>
                <a href="/maintenance/discrepancies/">Discrepancies</a>
            </li>
        </ul>
    </div>
    <div class="control-panel">
        <div class="btn-toolbar justify-content-between">
            <div class="btn-group mb-2">
                <a class="btn btn-secondary" asp-controller="Discrepancies" asp-action="Create">Create New</a>
            </div>        

            <div class="input-group">
                <form asp-action="index" method="get" class="form-inline">
                    <div class="form-group mb-2">
                        <input type="text" name="search" class="form-control" placeholder="Search discrepancies" autocomplete="false"/>
                    </div>
                    <div class="form-group ml-1 mb-2">
                    <input type="submit" value="Search" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>

        <table class = "table table-bordered" cellspacing="0" width="100%">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Creation Date</th>
                    <th scope="col">Discrepancy ID</th>
                    <th scope="col">Aircraft</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="col">12/29/2019</th>
                    <td scope="col">99999</th>
                    <td scope="col">N9999X</th>
                    <td scope="col">100 Hour Inspection</th>
                    <td scope="col">...</th>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
    </div>
</div>