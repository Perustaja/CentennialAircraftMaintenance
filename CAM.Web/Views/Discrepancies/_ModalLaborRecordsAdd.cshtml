@model CAM.Web.ViewModels.Discrepancies.DiscrepanciesAddLaborViewModel
<div class="modal fade" id="addLaborRecordModal">
    <div class="centered-form-container modal-dialog" style="min-width:700px;">
        <div class="form-panel shadowed modal-content">
            @* header *@
            <div class="modal-header">
                <h4 class="modal-title">Discrepancy - Add Labor Record</h4>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            @* body *@
            <div class="modal-body">
                <div class="pr-5 pl-5">
                    @* form *@
                    <form data-ajax="true" data-ajax-url=@Url.Action("onaddlabor", "Discrepancies") data-ajax-method="post"
                    data-ajax-update="#labor-basket" data-ajax-failure="onAddLaborFailure">
                        @Html.HiddenFor(m => m.DiscrepancyId)
                        <div class="form-group row">
                            <label asp-for="EmployeeId" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                <select asp-for="EmployeeId" class="form-control">
                                    @await Component.InvokeAsync("EmployeeList")
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DatePerformed" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <span asp-validation-for="DatePerformed" class="text-danger"></span>
                                <input asp-for="DatePerformed" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LaborInHours" class="col-md-4 col-form-label"></label>
                            <div class="col-md-8">
                                <span asp-validation-for="LaborInHours" class="text-danger"></span>
                                <input asp-for="LaborInHours" class="form-control" min="0.1"/>
                            </div>
                        </div>
                        <div class="btn-toolbar pl-2 mb-5" style="display: block;">
                            <button type="submit" class="btn btn-secondary"><i class="far fa-plus-square"></i> Add to labor</button>
                            <button class="btn btn-dark" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>