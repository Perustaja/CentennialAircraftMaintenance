@{
    if (TempData["StatusMessage"] != null)
    {
        if ((bool)TempData["Success"])
        {
            <div class="row fixed-top justify-content-center">
                <div class="col-md-6 col-md-offset-3">
                    <div class="alert alert-success alert-dismissible fade show text-center opac97" role="alert">
                        @TempData["StatusMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row fixed-top justify-content-center">
                <div class="col-md-6 col-md-offset-3">
                    <div class="alert alert-danger alert-dismissible fade show text-center opac97" role="alert">
                        @TempData["StatusMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }
    }
}