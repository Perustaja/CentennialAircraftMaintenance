@model IEnumerable<CAM.Core.Entities.Aircraft>;

@{
    ViewData["Title"] = "Aircraft";
}
<div class="control-panel">
      <!-- search form -->
      <form asp-action="Index" method="get">
      <input type="text" name="SearchReg" class="form-control control-object" placeholder="Search tail numbers..." autocomplete="off"/>
      <input type="submit" value="Search" class="btn btn-sm btn-secondary ctrl-btn"/>
      </form>
</div>
<div class="row" style="margin: 0px 30px 0px 30px;">
<div class="card-deck">
@foreach (var item in Model) {
<div class="col-md-3 col-sm-6" style="margin-bottom: 40px;">
  <div class="card">
    <img class="card-img-top" src="@(Url.Content(String.Format("~/img/aircraft/{0}", item.ImagePath)))">
    <div class="card-body">
      <h5 class="card-title">@(Html.DisplayFor(i => item.Id))</h5>
      <span class="card-text text-muted">@(Html.DisplayFor(i => item.Model))</span>
      <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" style="float: right;" data-toggle="dropdown"></button>
      <div class="dropdown-menu dropdown-menu-left">
          <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">View Profile</a>
          <a class="dropdown-item" asp-controller="Times" asp-action="Details" asp-route-id="@item.Id">View Times</a>
        </div>
    </div>
  </div>
</div>
    }
</div>
</div>